Package: microbiomeExplorer
Type: Package
Title: Microbiome Exploration App
Version: 0.99.3
Date: 2020-08-13
Authors@R: c(
    person("Joseph", "Paulson", , "paulson.joseph@gene.com", role = c("aut")),
    person("Janina", "Reeder", , "reederj1@gene.com", role = c("aut", "cre")),
